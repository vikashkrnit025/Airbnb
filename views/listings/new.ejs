          />
          </div> -->

            <div class="mb-3">
            <label for="Image" class="form-label">Upload Image </label>
            <input
            name="listing[image]"
            type="file"
            class="form-control"
            required
          />
          </div>

          <div "mb-3">
            <label for="Price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="Enter price"  class="form-control"required />
            <div class="invalid-feedback">Enter valid Price</div>
          </div>

          <div class="row">
              <div class="mb-3 col-md-4">
                  <label for="country" class="form-label">country</label>
                  <input name="listing[country]" placeholder="India" type="text" class="form-control"required/>
                  <div class="invalid-feedback">Enter valid Country name</div>
              </div>
              
              <div class="mb-3 col-md-8">
                  <label for="location" class="form-label">Location</label>
                  <input name="listing[location]" placeholder="Enter location" type="text" class="form-control"required/>
                  <div class="invalid-feedback">Enter valid location</div>
              </div>
          </div>

