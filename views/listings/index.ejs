<% layout("/layouts/boilerplate")%> <%= success%> 
<body>
  <h3>All Listings</h3>
  <!-- <form method="GET" action="/listings/new">
    <button>Create New Listing</button>
  </form> -->

  <div class="row row-cols-lg-5 row-cols-md-4 row-cols-sm-2">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%=listing._id %>" style="text-decoration: none;">
        <div class="card-col card ">         
          <img src="<%= listing.image.url %>"
           class="card-img-top"
           alt="<%= listing.title %>"
           style="height:13rem "
           />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
            <b><%= listing.title %></b> <br>
            <%= listing.price ? listing.price.toLocaleString("en-IN", { style: "currency", currency: "INR" }) : "Price not available" %> /per night
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>

</body>

